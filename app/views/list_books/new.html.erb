<% provide(:title, "添加书籍") %>
<h1>添加书籍</h1>
<div class="row" style="margin-top:50px;">
    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <%= form_for(@list_book) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                <%= f.label :book_id, "书名:", class: "col-sm-2 control-label" %>
                <div class="col-sm-7">
                    <%= f.text_field :book_id, class: "form-control" %>
                </div>
                <div class="col-sm-3">
                    <select name="list_book[score]" id="list_book_score" class="form-control">
                        <option value="0" selected="selected">推荐指数</option>
                        <option value="10">5 星</option>
                        <option value="8">4 星</option>
                        <option value="6">3 星</option>
                        <option value="4">2 星</option>
                        <option value="2">1 星</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :desc, "推荐语:", class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.text_area :desc, class: "form-control", rows: "7", placeholder: "书籍推荐语, 最少不少于30字, 最多不超过300字" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-6">
                    <%= f.submit "加入推书单", class: "btn btn-large btn-primary btn-block" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
