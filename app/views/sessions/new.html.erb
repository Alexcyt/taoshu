<% provide(:title, "登录") %>
<h1>登录</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <%= form_for(:session, url: sessions_path) do |f| %>
            <div class="form-group">
                <%= f.label :email, "邮箱:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.text_field :email, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password, "密码:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.password_field :password, class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <%= f.submit "登录", class: "btn btn-large btn-primary btn-block" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <%= link_to "还没有账号?立即注册", signup_path, class: "btn btn-large btn-success btn-block" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
