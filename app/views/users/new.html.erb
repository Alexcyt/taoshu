<% provide(:title, "注册") %>
<h1>注册</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                <%= f.label :name, "用户名:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.text_field :name, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :email, "注册邮箱:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.text_field :email, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password, "密码:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.password_field :password, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "确认密码:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.password_field :password_confirmation, class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <%= f.submit "提交注册", class: "btn btn-large btn-primary btn-block" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
