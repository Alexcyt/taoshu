<% provide(:title, "个人设置") %>
<h1>个人设置</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                <%= f.label :name, "用户名:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.text_field :name, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :email, "邮箱:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <input id="user_email" name="user[email]" type="email" class="form-control"
                        value="<%= @user.email %>" disabled />
                </div>
            </div>
            <div class="form-group">
                <%= f.label :old_password, "原密码:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.password_field :old_password, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :new_password, "新密码:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.password_field :new_password, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :new_password_confirmation, "确认新密码:", class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                    <%= f.password_field :new_password_confirmation, class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <%= f.submit "保存修改", class: "btn btn-large btn-primary btn-block" %>
                </div>
            </div>
        <% end %>
        <%= gravatar_for @user %>
        <a target="_blank" href="http://gravatar.com/emails">修改头像</a>
    </div>
</div>
