<% provide(:title, "所有书单") %>
<h1>所有书单</h1>
<div class="row" style="margin-top: 10px;">
    <aside class="col-md-9">
        <div style="text-align:right;">
            <%= will_paginate @booklists, previous_label: '<< 上一页', next_label: '下一页 >>' %>
        </div>
        <ul class="shudan">
            <% @booklists.each do |booklist| %>
                <section>
                    <li class="col-sm-12">
                        <div class="col-sm-7 shudan_title">
                            <p><%= link_to booklist.title, booklist, target: "_blank" %></p>
                            <p>书单标题</p>
                        </div>
                        <div class="col-sm-2">
                            <p><%= link_to booklist.user.name, booklist.user, target: "_blank" %></p>
                            <p>作者</p>
                        </div>
                        <div class="col-sm-1">
                            <p>99</p>
                            <p>本书</p>
                        </div>
                        <div class="col-sm-2">
                            <p><%= booklist.follow_booklists.length %></p>
                            <p>
                                <%= render :partial => 'shared/focus_booklist', :locals => { :obj => booklist, :button_type => "xs" } %>
                            </p>
                        </div>
                    </li>
                </section>
            <% end %>
        </ul>
        <div style="text-align:right;">
            <%= will_paginate @booklists, previous_label: '<< 上一页', next_label: '下一页 >>' %>
        </div>
    </aside>
    <aside class="col-md-3">
        <%= link_to "新建推书单", new_booklist_path, class: "btn btn-primary btn-small btn-block" %>
    </aside>
</div>
