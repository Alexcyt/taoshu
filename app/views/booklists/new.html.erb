<% provide(:title, "新建推书单") %>
<h1>新建推书单</h1>
<div class="row" style="margin-top:50px;">
    <div class="col-md-6 col-md-offset-3 form-horizontal">
        <%= form_for(@booklist) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                <%= f.label :title, "标题:", class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.text_field :title, class: "form-control", placeholder: "推书单标题" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :desc, "简介:", class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.text_area :desc, class: "form-control", rows: "5", placeholder: "推书单简介,不超过300字" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-6">
                    <%= f.submit "创建推书单", class: "btn btn-large btn-primary btn-block" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
