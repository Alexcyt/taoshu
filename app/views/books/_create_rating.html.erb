<% if signed_in? %>
    <%= form_for(current_user.ratings.build(book_id: @book.id), remote: true) do |f| %>
        <%= f.hidden_field :book_id %>
        <%= f.hidden_field :score, value: 0 %>
        <%= f.submit "提交评分", id: "rating_button", class: "btn btn-small btn-primary", disabled: true %>
    <% end %>
<% else %>
    <% session[:back_to] = request.fullpath %>
    <%= form_tag '/ratings', method: :post %>
    <%= submit_tag "提交评分", id: "rating_button", class: "btn btn-small btn-primary", disabled: true %>
<% end %>
